<Window x:Class="DataSorter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DataSorter"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <ComboBox x:Name="comboBox" HorizontalAlignment="Left" Margin="36,200,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="ComboBox_SelectionChanged"/>
        <DataGrid x:Name="dataTable" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="231,49,120,51" SelectionChanged="DataGrid_SelectionChanged"/>
        <Button Content="Load Data" HorizontalAlignment="Left" Margin="67,98,0,0" VerticalAlignment="Top" Click="Button_Click"/>
        <Label x:Name="statusData" Content="&#xD;&#xA;" HorizontalAlignment="Left" Margin="96,10,0,0" VerticalAlignment="Top"/>
        <Button x:Name="typeReport" Content="Type report" HorizontalAlignment="Left" Margin="69,319,0,0" VerticalAlignment="Top" Click="Button_Click_1"/>

    </Grid>
</Window>
